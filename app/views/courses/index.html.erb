<h1>Courses</h1>
<%= link_to 'New Course', new_course_path %>
<table>
	<tr>
		<th>Name</th>
		<th>Address</th>
		<th>City</th>
		<th>State</th>
		<th>Zip</th>
    <th>Par 3?</th>
	</tr>
	<% @courses.each do |course| %>
		<tr>
			<td><%= course.name %></td>
			<td><%= course.address %></td>
			<td><%= course.city %></td>
			<td><%= course.state %></td>
			<td><%= course.zip %></td>
      <td><%= course.par3? %></td>
      <td><%= link_to 'Show', course_path(course) %></td>
      <td><%= link_to 'Edit', edit_course_path(course) %></td>
      <td><%= link_to 'Delete', course_path(course),
      			method: :delete,
      			data: { confirm: 'Are you sure?' } %></td>
		</tr>
	<% end %>
</table>
<%= link_to 'Back to FRESCA Home', root_url %>