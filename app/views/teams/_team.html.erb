<div>
<table>
  <tr><th>Team <%= team.team_number %>: <%= team.name %> <% if not team.tournament.started? %> | <%= link_to 'Change Team Name', edit_tournament_team_path(team.tournament, team) %> <% end %></th></tr>
  <% team.team_players.each do |team_player| %>
  <tr><td><%= team_player.player.last_name %>, <%= team_player.player.first_name %></td></tr>
  <% end %>
  <tr><td>
    <% if not team.tournament.started? %>
    <a href='/tournaments/<%= @tournament.id %>/teams/<%= team.id %>/add_team_players/'>Add/Remove Players from Team</a>
    <% if team.tournament.tournament_type.tournament_type!=TournamentType.twoteam %>
     | <%= link_to 'Delete', [team.tournament, team],
               method: :delete,
               data: { confirm: 'Are you sure?' } %></td></tr>
    <% end %>
    <% end %>
</table>
</div>