<h1>Tournaments</h1>
<%= link_to 'New Tournament', new_tournament_path %>
<table>
	<tr>
		<th>Tournament</th>
		<th>Location</th>
		<th>Date</th>
    <th>Type</th>
    <th>Use Handicap?</th>
    <th>Tournmant Handicap Only?</th>
    <th></th>
	</tr>
	<% @tournaments.each do |tournament| %>
		<tr>
			<td><%= tournament.title %><% if tournament.subtitle.length > 0 %>, <%=	tournament.subtitle %><% end %></td>
			<td><%= tournament.location %></td>
			<td><%= tournament.tournament_date %></td>
      <td><%= tournament.tournament_type.tournament_type %></td>
      <td><%= tournament.handicap? %></td>
      <td><%= tournament.tournament_handicap_only? %></td>
      <% if not tournament.started? %>
        <td><%= link_to 'Show/Configure', tournament_path(tournament) %> | <%= link_to 'Edit', edit_tournament_path(tournament) %> | <%= link_to 'Delete', tournament_path(tournament),
      			method: :delete,
      			data: { confirm: 'Are you sure?' } %></td>
      <% elsif tournament.complete? %>
        <td>View Results</td>
      <% else %>
        <td>View Progress/Score</td>
      <% end %>
		</tr>
	<% end %>
</table>
<%= link_to 'Back to FRESCA Home', root_url %>
